<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

 <div class="container mt-3">
 <div class="sidebar col-2">
 </div>
 <div class="col-lg-12">
 <div class="row">
 <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
<h2>User info</h2>

<%= form_with model: @user do |f| %>
 <div class="form-group">
  <label for="inputName">Name</label></p>
  <%= f.text_field :name,class: "btn border btn-sm btn-block" %>
</div>
<div class="form-group">
  <p><label for="inputImage">Image</label></p>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
</div>
<div class="form-group">
  <p><label for="inputIntroduction">Introduction</label> </p>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" ,class: "btn border btn-sm btn-block"%>
</div>  
<div class="form-group">
 <p> <%= f.submit "Update User" ,class: "btn  btn-secondary"%> </p>
</div>  
<% end %>
</div>
</div>
</div>